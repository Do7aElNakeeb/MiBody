<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/exercises_details_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="My Profile"
        android:textColor="@color/MiBodyOrange"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/dimensionsBtnCV"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/landing_menu_item_margin"
            android:layout_marginRight="@dimen/landing_menu_item_margin"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
            card_view:cardUseCompatPadding="false"
            card_view:cardBackgroundColor="@color/MiBodyOrange">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/body_dimen_white"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:text="Body Dimensions"
            android:textColor="#000"/>

        <android.support.v7.widget.CardView
            android:id="@+id/statisticsBtnCV"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/landing_menu_item_margin"
            android:layout_marginRight="@dimen/landing_menu_item_margin"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
            card_view:cardUseCompatPadding="false"
            card_view:cardBackgroundColor="@color/MiBodyOrange">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/statistics_icon"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:text="Statistics"
            android:textColor="#000"/>

        <android.support.v7.widget.CardView
            android:id="@+id/profileBtnCV"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/landing_menu_item_margin"
            android:layout_marginRight="@dimen/landing_menu_item_margin"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
            card_view:cardUseCompatPadding="false"
            card_view:cardBackgroundColor="@color/MiBodyOrange">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/friends_icon"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:text="Profile Info"
            android:textColor="#000"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
