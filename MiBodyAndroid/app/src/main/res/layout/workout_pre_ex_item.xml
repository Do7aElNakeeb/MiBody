<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workoutNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="5dp"
            android:lines="1"
            android:text="Strength Upper Body Workout"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/MiBodyGrey"
            android:alpha="0.4"/>


        <TextView
            android:id="@+id/instructorNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="5dp"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/MiBodyOrange"
            android:text="Gym Instructor"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/MiBodyGrey"
        android:alpha="0.4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/workoutDescTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12sp"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/MiBodyGrey4"
            android:padding="5dp"
            android:text="Time: 3:20 - Calories: 500 KCal"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/MiBodyGrey"
            android:alpha="0.4"/>


        <TextView
            android:id="@+id/workoutPriceTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:padding="5dp"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/MiBodyOrange"
            android:text="Free"/>

    </LinearLayout>
</LinearLayout>