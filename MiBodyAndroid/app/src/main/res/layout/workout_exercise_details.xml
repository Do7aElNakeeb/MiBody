<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/triangle90"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:scaleX="-1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/triangle90"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/MiBodyWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:orientation="vertical"
                        android:background="@drawable/details_shape_tl">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:text="Ropes"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="1"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="2"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="3"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="100dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_black1"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="10dp"
                                            android:src="@drawable/ropes_dot_black"/>

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_red1"
                                            android:layout_marginBottom="10dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_red"/>

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_yellow1"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="100dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_black2"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="10dp"
                                            android:src="@drawable/ropes_dot_black"/>

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_red2"
                                            android:layout_marginBottom="10dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_red"/>

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_yellow2"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="100dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_black3"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="10dp"
                                            android:src="@drawable/ropes_dot_black"/>

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_red3"
                                            android:layout_marginBottom="10dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_red"/>

                                        <ImageView
                                            android:layout_width="@dimen/rope_circle_diameter"
                                            android:layout_height="@dimen/rope_circle_diameter"
                                            android:id="@+id/ropes_yellow3"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:background="@color/MiBodyWhite">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:text="Reps."/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="5">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:id="@+id/reps_counter_arrow"
                                android:src="@drawable/reps_counter_arrow2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_txtview"
                                android:layout_marginTop="25dp"
                                android:text="8"
                                android:textColor="@color/MiBodyOrange"
                                android:layout_centerInParent="true"
                                android:textSize="45sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_edttxt"
                                android:text="10"
                                android:visibility="gone"
                                android:textColor="@color/MiBodyOrange"
                                android:layout_centerInParent="true"
                                android:textSize="45sp"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/reps_counter_arrow"
                                android:layout_toStartOf="@id/reps_counter_arrow"
                                android:layout_centerVertical="true"
                                android:id="@+id/reps_minus_btn"
                                android:src="@drawable/workout_wx_minus_btn"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/reps_counter_arrow"
                                android:layout_toEndOf="@id/reps_counter_arrow"
                                android:layout_centerVertical="true"
                                android:id="@+id/reps_plus_btn"
                                android:gravity="center"
                                android:src="@drawable/workout_ex_plus_btn"/>

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:text="Repeat this exercise"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:text="Rest Time"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.9">

                            <android.support.v7.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:id="@+id/exerciseRepsPlusCV"
                                card_view:cardCornerRadius="5dp"
                                card_view:cardBackgroundColor="@color/MiBodyOrange">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="20sp"
                                        android:textColor="@color/MiBodyWhite"
                                        android:text="x"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:id="@+id/exercise_reps_txtview"
                                        android:textSize="20sp"
                                        android:textColor="@color/MiBodyWhite"
                                        android:text="0"/>
                                </LinearLayout>


                            </android.support.v7.widget.CardView>

                        </FrameLayout>



                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="10dp"
                                android:id="@+id/rest_minus_btn"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/workout_wx_minus_btn"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="1dp"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:id="@+id/rest_plus_btn"
                                android:adjustViewBounds="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="1dp"
                                android:src="@drawable/workout_ex_plus_btn"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:padding="10dp"
                                android:id="@+id/restTimeBattary"
                                android:layout_toRightOf="@id/rest_minus_btn"
                                android:layout_toEndOf="@id/rest_minus_btn"
                                android:layout_toLeftOf="@id/rest_plus_btn"
                                android:layout_toStartOf="@id/rest_plus_btn"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/resttime_battery"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rest_time_txtview"
                                android:layout_centerInParent="true"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:text="90 Sec"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rest_time_edttxt"
                                android:textColor="@color/black"
                                android:layout_centerInParent="true"
                                android:textSize="15sp"
                                android:visibility="gone"
                                android:gravity="center"
                                android:text="90 Sec"/>


                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>