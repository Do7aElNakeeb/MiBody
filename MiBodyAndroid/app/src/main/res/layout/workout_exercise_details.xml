<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/add_workout_exercises_item">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/triangle90"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:scaleX="-1"/>

            <FrameLayout
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@color/black">
            </FrameLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/triangle90"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/details_shape_tl">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Ropes"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="5dp"
                                        android:layout_height="60dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_black1"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="10dp"
                                            android:src="@drawable/ropes_dot_black"/>

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_red1"
                                            android:layout_marginBottom="10dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_red"/>

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_yellow1"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="5dp"
                                        android:layout_height="60dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_black2"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="10dp"
                                            android:src="@drawable/ropes_dot_black"/>

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_red2"
                                            android:layout_marginBottom="10dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_red"/>

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_yellow2"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="5dp"
                                        android:layout_height="60dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_black3"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="10dp"
                                            android:src="@drawable/ropes_dot_black"/>

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_red3"
                                            android:layout_marginBottom="10dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_red"/>

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:id="@+id/ropes_yellow3"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ropes_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="-10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="1"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="2"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="3"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:background="@color/black">

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:background="@drawable/details_shape_tr">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Reps."/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="5">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                android:id="@+id/reps_counter_arrow"
                                android:src="@drawable/reps_counter_arrow"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_txtview"
                                android:text="10"
                                android:textColor="@color/MiBodyOrange"
                                android:layout_centerInParent="true"
                                android:textSize="40sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_edttxt"
                                android:text="10"
                                android:visibility="gone"
                                android:textColor="@color/MiBodyOrange"
                                android:layout_centerInParent="true"
                                android:textSize="40sp"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-15dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_minus_btn"
                                android:layout_weight="1"
                                android:text="-"
                                android:textAlignment="center"
                                android:background="#00000000"
                                android:textColor="@color/MiBodyOrange"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_plus_btn"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:text="+"
                                android:background="#00000000"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:alpha="0.5"
                    android:background="@color/black">

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/details_shape_b">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rest Time"
                            android:layout_marginTop="3dp"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="3dp">


                            <Button
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:id="@+id/rest_minus_btn"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:text="-"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/MiBodyOrange"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/resttime_battery"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/rest_time_txtview"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:gravity="center"
                                    android:text="90 Sec"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/rest_time_edttxt"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:text="90 Sec"/>

                            </RelativeLayout>

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:id="@+id/rest_plus_btn"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="1dp"
                                android:background="#00000000"
                                android:text="+"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:alpha="0.5"
                        android:background="@color/black">

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Exercise Reps"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/exercise_reps_txtview"
                            android:textSize="20sp"
                            android:textColor="@color/MiBodyOrange"
                            android:text="1"
                            android:gravity="center"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/exercise_reps_circle_btn"
                            android:background="@drawable/reps_counter_arrow"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>