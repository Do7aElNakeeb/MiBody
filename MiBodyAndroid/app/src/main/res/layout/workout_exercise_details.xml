                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9">

                            <android.support.v7.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:id="@+id/exerciseRepsPlusCV"
                                card_view:cardCornerRadius="5dp"
                                card_view:cardBackgroundColor="@color/MiBodyOrange">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="20sp"
                                        android:textColor="@color/MiBodyWhite"
                                        android:text="x"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:id="@+id/exercise_reps_txtview"
                                        android:textSize="20sp"
                                        android:textColor="@color/MiBodyWhite"
                                        android:text="1"/>
                                </LinearLayout>


                            </android.support.v7.widget.CardView>

                            <ImageView
                                android:layout_width="30dp"
                                android:padding="7.5dp"
                                android:layout_height="match_parent"
                                android:id="@+id/exReps_minus_btn"
                                android:layout_toLeftOf="@id/exerciseRepsPlusCV"
                                android:layout_toStartOf="@id/exerciseRepsPlusCV"
                                android:layout_marginRight="20dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/workout_wx_minus_btn"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="1dp"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:layout_width="30dp"
                                android:padding="7.5dp"
                                android:layout_height="match_parent"
                                android:id="@+id/exReps_plus_btn"
                                android:adjustViewBounds="true"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/exerciseRepsPlusCV"
                                android:layout_toEndOf="@id/exerciseRepsPlusCV"
                                android:layout_marginLeft="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="1dp"
                                android:src="@drawable/workout_ex_plus_btn"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:padding="2.5dp"
                                android:layout_height="match_parent"
                                android:id="@+id/rest_minus_btn"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/workout_wx_minus_btn"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="1dp"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:padding="2.5dp"
                                android:layout_height="match_parent"
                                android:id="@+id/rest_plus_btn"
                                android:adjustViewBounds="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="1dp"
                                android:src="@drawable/workout_ex_plus_btn"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                            <ProgressBar
                                android:id="@+id/restProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingStart="15dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingEnd="15dp"
                                android:layout_toRightOf="@id/rest_minus_btn"
                                android:layout_toEndOf="@id/rest_minus_btn"
                                android:layout_toLeftOf="@id/rest_plus_btn"
                                android:layout_toStartOf="@id/rest_plus_btn"
                                android:max="200"
                                android:progress="90"
                                android:progressDrawable="@drawable/rectangle_progress_bar"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:padding="5dp"
                                android:id="@+id/restTimeBattary"
                                android:layout_toRightOf="@id/rest_minus_btn"
                                android:layout_toEndOf="@id/rest_minus_btn"
                                android:layout_toLeftOf="@id/rest_plus_btn"
                                android:layout_toStartOf="@id/rest_plus_btn"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/resttime_battery"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center">

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rest_time_edttxt"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:text="90 Sec"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rest_time_txtview"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:text="90"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:text=" Sec"/>



                            </LinearLayout>



                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>