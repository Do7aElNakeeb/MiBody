<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/triangle90"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:scaleX="-1"/>

            <FrameLayout
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@color/black">
            </FrameLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/triangle90"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/details_shape_tl">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Ropes"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="180dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_black1"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="20dp"
                                            android:src="@drawable/rgb_dot_black"/>

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_red1"
                                            android:layout_marginBottom="20dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/rgb_dot_red"/>

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_yellow1"
                                            android:layout_gravity="center"
                                            android:src="@drawable/rgb_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="1"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="180dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_black2"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="20dp"
                                            android:src="@drawable/rgb_dot_black"/>

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_red2"
                                            android:layout_marginBottom="20dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/rgb_dot_red"/>

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_yellow2"
                                            android:layout_gravity="center"
                                            android:src="@drawable/rgb_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="2"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="180dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_black3"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="20dp"
                                            android:src="@drawable/rgb_dot_black"/>

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_red3"
                                            android:layout_marginBottom="20dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/rgb_dot_red"/>

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/rgb_yellow3"
                                            android:layout_gravity="center"
                                            android:src="@drawable/rgb_dot_yellow"/>

                                    </RadioGroup>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="3"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    android:gravity="center"/>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:background="@color/black">

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/details_shape_tr">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Reps."/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:padding="10dp"
                            android:layout_weight="5">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_counter_arrow"
                                android:src="@drawable/reps_counter_arrow"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_txtview"
                                android:text="10"
                                android:textColor="@color/MiBodyOrange"
                                android:layout_centerInParent="true"
                                android:textSize="80sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_edttxt"
                                android:text="10"
                                android:visibility="gone"
                                android:textColor="@color/MiBodyOrange"
                                android:layout_centerInParent="true"
                                android:textSize="80sp"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_minus_txt"
                                android:text="-"
                                android:textColor="@color/MiBodyOrange"
                                android:textStyle="bold"
                                android:layout_marginLeft="15dp"
                                android:layout_marginStart="15dp"
                                android:textSize="30sp"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_plus_txt"
                                android:text="+"
                                android:textColor="@color/black"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layout_marginRight="15dp"
                                android:layout_marginEnd="15dp"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_weight="1"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:alpha="0.5"
                    android:background="@color/black">

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/details_shape_b">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rest Time"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/rest_minus_txt"
                                android:layout_weight="1"
                                android:text="-"
                                android:layout_marginLeft="20dp"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/MiBodyOrange"
                                android:textSize="40sp"
                                android:gravity="center"
                                android:textStyle="bold"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/resttime_battery"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/rest_time_txtview"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:text="90 Sec"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/rest_time_edttxt"
                                    android:textColor="@color/black"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:text="90 Sec"/>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/rest_plus_txt"
                                android:layout_weight="1"
                                android:layout_marginRight="20dp"
                                android:layout_marginEnd="20dp"
                                android:text="+"
                                android:textColor="@color/black"
                                android:textSize="40sp"
                                android:gravity="center"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:alpha="0.5"
                        android:background="@color/black">

                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginLeft="30dp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:text="Exercise Reps"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/exercise_reps_txtview"
                            android:layout_centerInParent="true"
                            android:textSize="40sp"
                            android:textColor="@color/MiBodyOrange"
                            android:text="1"
                            android:gravity="center"/>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/exercise_reps_circle_btn"
                            android:layout_marginEnd="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/reps_counter_arrow"/>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>