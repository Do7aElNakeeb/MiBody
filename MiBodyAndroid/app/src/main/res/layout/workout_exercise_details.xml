<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/triangle90"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:scaleX="-1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/triangle90"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/MiBodyWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/workoutExSetTubesLL"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:orientation="vertical"
                        android:background="@drawable/details_shape_tl">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:text="Tubes"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="1"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="2"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="3"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="100dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <ImageView
                                        android:id="@+id/exTubeIV1"
                                        android:layout_width="@dimen/rope_circle_diameter"
                                        android:layout_height="@dimen/rope_circle_diameter"
                                        android:layout_marginBottom="10dp"
                                        android:layout_gravity="center"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ropes_dot_red_selected"/>



                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="100dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <ImageView
                                        android:id="@+id/exTubeIV2"
                                        android:layout_width="@dimen/rope_circle_diameter"
                                        android:layout_height="@dimen/rope_circle_diameter"
                                        android:layout_marginBottom="10dp"
                                        android:layout_gravity="center"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ropes_dot_red_selected"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="100dp"
                                        android:alpha="0.6"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/details_rgb_bg"/>

                                    <ImageView
                                        android:id="@+id/exTubeIV3"
                                        android:layout_width="@dimen/rope_circle_diameter"
                                        android:layout_height="@dimen/rope_circle_diameter"
                                        android:layout_marginBottom="10dp"
                                        android:layout_gravity="center"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ropes_dot_red_selected"/>

                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:background="@color/MiBodyWhite">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reps"/>

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/repsTimeSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textOff="Reps"
                                android:textOn="Time"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:text="Reps."/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="5">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:id="@+id/reps_counter_arrow"
                                android:src="@drawable/reps_counter_arrow2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_txtview"
                                android:layout_marginTop="25dp"
                                android:text="1"
                                android:textColor="@color/MiBodyOrange"
                                android:layout_centerInParent="true"
                                android:textSize="50sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reps_edttxt"
                                android:text="10"
                                android:visibility="gone"
                                android:textColor="@color/MiBodyOrange"
                                android:layout_centerInParent="true"
                                android:textSize="45sp"/>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="35dp"
                                android:paddingBottom="35dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_toLeftOf="@id/reps_counter_arrow"
                                android:layout_toStartOf="@id/reps_counter_arrow"
                                android:layout_centerVertical="true"
                                android:id="@+id/reps_minus_btn"
                                android:src="@drawable/workout_wx_minus_btn"/>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="25dp"
                                android:paddingBottom="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/reps_counter_arrow"
                                android:layout_toEndOf="@id/reps_counter_arrow"
                                android:layout_centerVertical="true"
                                android:id="@+id/reps_plus_btn"
                                android:gravity="center"
                                android:src="@drawable/workout_ex_plus_btn"/>

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:text="Repeat this exercise"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:text="Rest Time"/>
                    </LinearLayout>

