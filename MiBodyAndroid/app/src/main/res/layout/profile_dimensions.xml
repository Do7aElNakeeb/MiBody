    <!-- Body Muscles Parts Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/dimensions_title"
        android:layout_above="@id/description_txt">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/body_dimen1"
            android:src="@drawable/bodyv_1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/body_dimen2"
            android:src="@drawable/bodyv_2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/body_dimen3"
            android:src="@drawable/bodyv_3"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/body_dimen4"
            android:src="@drawable/bodyv_4"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/body_dimen5"
            android:src="@drawable/bodyv_5"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/body_dimen6"
            android:src="@drawable/bodyv_6"/>

    </LinearLayout>

    <!-- Body Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bodyImgView"
        android:src="@drawable/body_dimen"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/dimensions_title"
        android:layout_above="@id/description_txt"/>


    <!-- Muscle Details Layout -->

    <LinearLayout
        android:layout_width="@dimen/body_dimen_width"
        android:layout_height="@dimen/body_dimen_height"
        android:gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        android:id="@+id/dimenLayoutToFlip"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:id="@+id/dimenLayoutDetailsToFlip"
            android:orientation="vertical"
            android:background="@drawable/details_shape_all">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_gravity="center"
                android:id="@+id/muscleName"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Biceps"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:inputType="numberDecimal"
                    android:textSize="13sp"
                    android:id="@+id/muscleET"
                    android:maxEms="5"
                    android:maxLength="5"
                    android:padding="0dp"/>

                <View
                    android:layout_width="30dp"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/muscleET"
                    android:background="@color/black">
                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:text="Cm"
                    android:textColor="@color/MiBodyOrange"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:scaleY="-1"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/triangle90"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:scaleX="-1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/triangle90"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>