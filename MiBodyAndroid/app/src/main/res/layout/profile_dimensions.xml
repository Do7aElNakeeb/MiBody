<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/profileDimen"
    android:layout_width="match_parent"
    android:background="@drawable/exercises_details_bg"
    android:layout_height="match_parent">

    <!-- StatisticsActivity Button Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statisticsBkBtn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up"
            android:rotation="-90"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:text="Back"
            android:textColor="@color/MiBodyOrange"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_title"
        android:layout_below="@id/statisticsBkBtn"
        android:text="Profile"
        android:textSize="17sp"
        android:textColor="@color/MiBodyOrange"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Dimensions"
        android:id="@+id/dimensions_title"
        android:textSize="30sp"
        android:layout_below="@id/profile_title"
        android:textColor="@color/black"/>

    <!-- Home Button Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeBtn"
        android:layout_below="@id/statisticsBkBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/MiBodyOrange">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/home_icon"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_txt"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:text="Click on the black dots to set your dimensions"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"/>

