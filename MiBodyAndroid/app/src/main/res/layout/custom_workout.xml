                        android:id="@+id/exercises_grid">

                    </android.support.v7.widget.RecyclerView>
                    -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/exercises_set_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Set Exercises"/>

            <Button
                android:background="@drawable/circle_plus"
                android:textSize="10sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:id="@+id/add_exercise" />
            <!--
            <Button
                android:text="-"
                android:textSize="10sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/remove_exercise" />

-->
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/addWorkoutUserExercisesRV"
            android:padding="10dp">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/exercises_set_grid">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setRepeatLayout"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/workoutRepeat"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_alignBaseline="@+id/setRepeatBtn"
                    android:hint="Workout Repeat"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/workoutRepeatBtn"
                    android:background="@android:drawable/ic_menu_revert"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Drag your exercises"
            android:gravity="center_horizontal"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/arrow_up"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#918383"
            android:paddingTop="0.5dp">

            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFF"
                android:id="@+id/addWorkoutExercisesRV"
                android:padding="10dp">

            </android.support.v7.widget.RecyclerView>

            </LinearLayout>
    </LinearLayout>


