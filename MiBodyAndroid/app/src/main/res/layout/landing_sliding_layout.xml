<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="190dp"
    android:background="#00ffffff"
    android:layout_height="match_parent"
    tools:showIn="@layout/landing_activity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="#c4c4c4"
        android:alpha=".5"
        android:background="@drawable/dragbtn_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#918383"
        android:paddingTop="0.5dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/landing_menu_row_margin"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Exercises"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/landing_menu_item_txtmargin"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landing_menu_item_height"
                        android:id="@+id/landingExercisesBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/landing_menu_item_margin"
                        android:layout_marginRight="@dimen/landing_menu_item_margin"
                        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
                        card_view:cardUseCompatPadding="false"
                        card_view:cardBackgroundColor="@color/MiBodyOrange">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:src="@drawable/exercises_icon"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="Routine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/landing_menu_item_txtmargin"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landing_menu_item_height"
                        android:id="@+id/landingWorkoutsBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/landing_menu_item_margin"
                        android:layout_marginRight="@dimen/landing_menu_item_margin"
                        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
                        card_view:cardUseCompatPadding="false"
                        card_view:cardBackgroundColor="@color/MiBodyOrange">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/routine_icon"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="My Profile"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/landing_menu_item_txtmargin"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landing_menu_item_height"
                        android:id="@+id/landingProfileBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/landing_menu_item_margin"
                        android:layout_marginRight="@dimen/landing_menu_item_margin"
                        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
                        card_view:cardUseCompatPadding="false"
                        card_view:cardBackgroundColor="@color/MiBodyOrange">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/friends_icon"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <!-- Second Row -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/landing_menu_row_margin"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Shop"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/landing_menu_item_txtmargin"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landing_menu_item_height"
                        android:id="@+id/landingShopBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/landing_menu_item_margin"
                        android:layout_marginRight="@dimen/landing_menu_item_margin"
                        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
                        card_view:cardUseCompatPadding="false"
                        card_view:cardBackgroundColor="@color/MiBodyOrange">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="11dp"
                            android:src="@drawable/shop_icon"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="News"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/landing_menu_item_txtmargin"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landing_menu_item_height"
                        android:id="@+id/landingNewsBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/landing_menu_item_margin"
                        android:layout_marginRight="@dimen/landing_menu_item_margin"
                        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
                        card_view:cardUseCompatPadding="false"
                        card_view:cardBackgroundColor="@color/MiBodyOrange">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="11dp"
                            android:src="@drawable/news_icon"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/landing_menu_item_txtmargin"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landing_menu_item_height"
                        android:id="@+id/landingSettingsBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/landing_menu_item_margin"
                        android:layout_marginRight="@dimen/landing_menu_item_margin"
                        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
                        card_view:cardUseCompatPadding="false"
                        card_view:cardBackgroundColor="@color/MiBodyOrange">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/settings_icon"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <!-- Third Row -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/landing_menu_item_txtmargin"
                        android:text="About"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landing_menu_item_height"
                        android:id="@+id/landingAboutBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/landing_menu_item_margin"
                        android:layout_marginRight="@dimen/landing_menu_item_margin"
                        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
                        card_view:cardUseCompatPadding="false"
                        card_view:cardBackgroundColor="@color/MiBodyOrange">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/about_icon"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="Follow us"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/landing_menu_item_txtmargin"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landing_menu_item_height"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/landing_menu_item_margin"
                        android:layout_marginRight="@dimen/landing_menu_item_margin"
                        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
                        card_view:cardUseCompatPadding="false"
                        card_view:cardBackgroundColor="@color/MiBodyOrange">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/landingFbBtn"
                                android:padding="10dp"
                                android:src="@drawable/follow_fb_btn"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitCenter"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/landingInstaBtn"
                                android:padding="10dp"
                                android:src="@drawable/follow_insta_btn"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitCenter"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/landingTwitterBtn"
                                android:padding="10dp"
                                android:src="@drawable/follow_twitter_btn"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitCenter"/>
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/landingUTubeBtn"
                                android:padding="10dp"
                                android:src="@drawable/follow_utube_btn"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitCenter"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>