<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/workoutsItemCV"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="@dimen/landing_menu_item_cornerradius"
        card_view:cardUseCompatPadding="false"
        card_view:cardBackgroundColor="#FFF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:id="@+id/workoutsItemImage"
            android:src="@drawable/personalised_icon"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workoutsItemName"
        android:gravity="center"
        android:textSize="17sp"
        android:text="Personalised"
        android:textColor="#000"/>

</LinearLayout>