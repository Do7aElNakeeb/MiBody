<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginbg_blur"
        android:background="@color/black"
        android:scaleType="centerCrop"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:id="@+id/userImage"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pp_default"/>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/registrationForm"
        android:layout_below="@id/userImage"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:gravity="center"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/name"
                android:text="Mamdouh El Nakeeb"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:maxLines="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/MiBodyWhite"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailTV"
                android:layout_marginTop="10dp"
                android:text="Email Address"
                android:gravity="center"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/email"
                android:text="mamdouh.el.nakeeb@gmail.com"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:maxLines="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/MiBodyWhite"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/genderTV"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:gravity="center"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/gender"
                android:text="Male"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:maxLines="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/MiBodyWhite"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gobTV"
                android:layout_marginTop="10dp"
                android:text="Birthday"
                android:gravity="center"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/dob"
                android:text="1/6/1995"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:maxLines="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/MiBodyWhite"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/weightTV"
                        android:layout_marginTop="10dp"
                        android:text="Weight"
                        android:gravity="center"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/weight"
                        android:text="45"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:maxLines="1"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/MiBodyWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/heightTV"
                        android:layout_marginTop="10dp"
                        android:text="Height"
                        android:gravity="center"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/height"
                        android:text="165"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:maxLines="1"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/MiBodyWhite" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
