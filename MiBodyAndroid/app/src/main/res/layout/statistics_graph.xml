<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:paddingBottom="20dp"
            android:background="@drawable/exercises_details_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/homeBtnLL">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/arrow_white"
                    android:scaleX="-1"
                    android:id="@+id/dimensions_btn_arrow"
                    android:tint="@color/MiBodyOrange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:textAllCaps="false"
                    android:textColor="@color/MiBodyOrange"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/workoutName"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/MiBodyOrange"
                        android:text="My Statistics"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/black"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:alpha="0.4"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/exerciseName"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="Reps Statistics"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="6">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <FrameLayout
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:background="@color/MiBodyRed"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="12sp"
                                        android:text="Objective"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp">
                                    <FrameLayout
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:background="@color/MiBodyGrey3"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="Achieved"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp">
                                    <FrameLayout
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:background="@color/MiBodyGreen"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="Time"/>
                                </LinearLayout>

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/exStatisticsVerticalAxis"
                                android:text="Reps"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:scaleType="fitCenter"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:rotation="-90"
                                android:tint="@color/black"
                                android:layout_below="@id/exStatisticsVerticalAxis"
                                android:id="@+id/exStatisticsArrowUp"
                                android:src="@drawable/arrow_white"/>
                            <FrameLayout
                                android:layout_width="1.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16.5dp"
                                android:id="@+id/yAxisFL"
                                android:layout_marginStart="16.5dp"
                                android:layout_marginBottom="26.5dp"
                                android:layout_below="@id/exStatisticsArrowUp"
                                android:background="@color/black">
                            </FrameLayout>


                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:scaleType="fitCenter"
                                android:layout_marginBottom="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="30dp"
                                android:layout_marginEnd="30dp"
                                android:tint="@color/black"
                                android:layout_alignParentBottom="true"
                                android:id="@+id/exStatisticsArrowRight"
                                android:src="@drawable/arrow_white"/>

                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/exStatisticsArrowUp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginRight="80dp"
                                android:layout_marginEnd="80dp"
                                android:id="@+id/exercisesStatisticsRV">

                            </android.support.v7.widget.RecyclerView>

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/timeLineChart"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/exStatisticsArrowUp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginRight="80dp"
                                android:layout_marginEnd="80dp" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_marginLeft="16.5dp"
                                android:layout_marginStart="16.5dp"
                                android:layout_alignParentBottom="true"
                                android:layout_toLeftOf="@id/exStatisticsArrowRight"
                                android:layout_toStartOf="@id/exStatisticsArrowRight"
                                android:layout_marginBottom="26.5dp"
                                android:background="@color/black">
                            </FrameLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/exStatisticsHorizontalAxis"
                                android:text="Exercise"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="16dp"
                                android:layout_marginEnd="16dp"
                                android:textColor="@color/black"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_weight="4">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/performStatisticsVerticalAxis"
                                android:text="Perf."
                                android:textColor="@color/MiBodyWhite"/>
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:scaleType="fitCenter"
                                android:rotation="-90"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_below="@id/performStatisticsVerticalAxis"
                                android:id="@+id/performStatisticsArrowUp"
                                android:src="@drawable/arrow_white"/>
                            <FrameLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16.5dp"
                                android:layout_marginStart="16.5dp"
                                android:layout_marginBottom="26.5dp"
                                android:layout_below="@id/performStatisticsArrowUp"
                                android:background="@color/MiBodyWhite">
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/performStatisticsHorizontalAxis"
                                android:text="Time"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginEnd="15dp"
                                android:rotation="90"
                                android:textColor="@color/MiBodyWhite"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:scaleType="fitCenter"
                                android:layout_marginBottom="20dp"
                                android:layout_toLeftOf="@id/performStatisticsHorizontalAxis"
                                android:layout_toStartOf="@id/performStatisticsHorizontalAxis"
                                android:layout_alignParentBottom="true"
                                android:id="@+id/performStatisticsArrowRight"
                                android:src="@drawable/arrow_white"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="16.5dp"
                                android:layout_marginStart="16.5dp"
                                android:layout_alignParentBottom="true"
                                android:layout_toLeftOf="@id/performStatisticsArrowRight"
                                android:layout_toStartOf="@id/performStatisticsArrowRight"
                                android:layout_marginBottom="26.5dp"
                                android:background="@color/MiBodyWhite">
                            </FrameLayout>

                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/performStatisticsArrowUp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginBottom="26.5dp"
                                android:layout_marginStart="25dp"
                                android:layout_marginRight="70dp"
                                android:layout_marginEnd="70dp"
                                android:id="@+id/performStatisticsRV">

                            </android.support.v7.widget.RecyclerView>

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="@color/MiBodyWhite"
            android:layout_weight="1.1">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/userIV"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:src="@drawable/pp_default"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/userIV"
                android:layout_toEndOf="@id/userIV"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userNameTxtView"
                    android:text="Mamdouh El Nakeeb"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/MiBodyOrange"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height: "
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userHeightTxtView"
                        android:text="165"
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userHeightUnitTxtView"
                        android:text="Cm"
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight: "
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userWeightTxtView"
                        android:text="45"
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userWeightUnitTxtView"
                        android:text="kg"
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ageTxtView"
                        android:text="21"
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" years old"
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI : "
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imcTxtView"
                        android:text="29,3"
                        android:textSize="12sp"
                        android:textColor="@color/MiBodyGrey2"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/homeBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/MiBodyOrange">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleX=".4"
                    android:scaleY=".4"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_icon"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/blackLayout"
        android:background="@color/black"
        android:visibility="gone"
        android:alpha="0.6">

    </FrameLayout>

    <ImageView
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:id="@+id/statisticsFilterBtn"
        android:src="@drawable/filter_icon"/>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:id="@+id/statisticsFilterMenuLL"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/statisticsFilterBtn">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/triangle90"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:scaleX="-1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/triangle90"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/details_shape_all">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter by:"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/MiBodyGrey3"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:id="@+id/statisticsFbyDayCV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/MiBodyGrey4"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/MiBodyGrey"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Day"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/statisticsFbyWeekCV"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="@color/MiBodyGrey4"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/MiBodyGrey"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Week"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/statisticsFbyMonthCV"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="@color/MiBodyGrey4"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/MiBodyGrey"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Month"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/statisticsFbyYearCV"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="@color/MiBodyGrey4"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/MiBodyGrey"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Year"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>