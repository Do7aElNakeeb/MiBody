<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exercises_details_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cv1"
            app:cardBackgroundColor="@color/MiBodyOrange"
            app:cardElevation="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="20dp"
                android:textColor="@color/MiBodyWhite"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cv2"
            app:cardBackgroundColor="@color/MiBodyOrange"
            app:cardElevation="0dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="20dp"
                android:textColor="@color/MiBodyWhite"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cv3"
            app:cardBackgroundColor="@color/MiBodyOrange"
            app:cardElevation="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/MiBodyWhite"
                android:layout_margin="3dp"
                app:cardElevation="0dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="18.5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="20dp"
                    android:textColor="@color/MiBodyOrange"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/rec1"
            android:layout_toRightOf="@id/cv1"
            android:layout_toEndOf="@id/cv1"
            android:layout_toLeftOf="@id/cv2"
            android:layout_toStartOf="@id/cv2"
            android:layout_centerVertical="true"
            android:background="@color/MiBodyOrange"
            android:layout_gravity="center">

        </View>



        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_toRightOf="@id/cv2"
            android:layout_toEndOf="@id/cv2"
            android:layout_toLeftOf="@id/cv3"
            android:layout_toStartOf="@id/cv3"
            android:layout_centerVertical="true"
            android:background="@color/MiBodyOrange"
            android:layout_gravity="center">

        </View>



    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Units"/>

            <FrameLayout
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="#967b7b7b">
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/cmTxt"
                        android:textColor="@color/MiBodyOrange"
                        android:textColorHighlight="@color/MiBodyOrange"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="cm"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/kgTxt"
                        android:textColor="@color/MiBodyOrange"
                        android:textColorHighlight="@color/MiBodyOrange"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:text="kg"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/inchTxt"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/MiBodyOrange"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="inch"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lbTxt"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/MiBodyOrange"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="lb"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Your Weight"
                android:textColor="@color/black"
                android:gravity="center"/>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:background="@drawable/edittxt_obg">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pen_oicon"/>

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/weightTxtField"
                    android:textColorHint="#6b000000"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:hint="ex: 75"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:padding="0dp"
                    android:layout_centerInParent="true"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_height="match_parent"/>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Your Height"
                android:textColor="@color/black"
                android:gravity="center"/>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:background="@drawable/edittxt_obg">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pen_oicon"/>

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/heightTxtField"
                    android:textColorHint="#6b000000"
                    android:background="@android:color/transparent"
                    android:hint="ex: 170"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:padding="0dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_height="match_parent"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/bmiLL"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BMITxt"
            android:text="19.5"
            android:textColor="@color/MiBodyOrange"
            android:textSize="70sp"
            android:gravity="center"
            android:layout_marginTop="5dp"/>

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:id="@+id/regThreeBtn"
        android:layout_gravity="center"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/signinbtn"/>

</LinearLayout>